<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#fafafa"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="-0dp"
    card_view:cardUseCompatPadding="true">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoProfesional"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:elevation="20dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="5dp"
        android:paddingLeft="70dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/nombreapellidoProfesional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#009688"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailProfesional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombreapellidoProfesional"
            android:layout_below="@+id/nombreapellidoProfesional"
            android:paddingBottom="20dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/telefonoProfesional"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/direccionProfesional"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fotoTexto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </RelativeLayout>


</android.support.v7.widget.CardView>